{
  "name": "cursor-agent-pm",
  "displayName": "Cursor Agent PM",
  "description": "In-IDE Agent Project Management Extension",
  "version": "0.0.1",
  "publisher": "cursor-user",
  "repository": {
    "type": "git",
    "url": "https://github.com/mikehenken/CaaPM"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "cursor-agent-pm-sidebar",
          "title": "Agent PM",
          "icon": "$(checklist)"
        }
      ]
    },
    "views": {
      "cursor-agent-pm-sidebar": [
        {
          "type": "webview",
          "id": "cursor-agent-pm.dashboard",
          "name": "Tickets"
        }
      ]
    },
    "commands": [
      {
        "command": "cursor-agent-pm.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "cursor-agent-pm.createTicket",
        "title": "Create Ticket (Smart)",
        "category": "Ticket"
      },
      {
        "command": "cursor-agent-pm.createTicketWizard",
        "title": "Create Ticket (Wizard)",
        "category": "Ticket"
      },
      {
        "command": "cursor-agent-pm.exportFromClipboard",
        "title": "Export Chat as Ticket",
        "category": "Ticket"
      },
      {
        "command": "cursor-agent-pm.loadTicket",
        "title": "Load Ticket Context",
        "category": "Ticket"
      },
      {
        "command": "cursor-agent-pm.ticketStatus",
        "title": "Ticket Status",
        "category": "Ticket"
      },
      {
        "command": "cursor-agent-pm.createTicketFromClipboard",
        "title": "Create Ticket from Clipboard (Legacy)",
        "category": "Ticket"
      },
      {
        "command": "cursor-agent-pm.copyTicketContext",
        "title": "Copy Ticket Context",
        "category": "Ticket"
      }
    ],
    "configuration": {
      "title": "Cursor Agent PM",
      "properties": {
        "ticketManager.autoExport.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable auto-export of chat sessions to tickets (Requires manual trigger in MVP)"
        }
      }
    },
    "keybindings": [
      {
        "command": "cursor-agent-pm.createTicket",
        "key": "ctrl+shift+n",
        "mac": "cmd+shift+n",
        "when": "editorTextFocus"
      },
      {
        "command": "workbench.view.extension.cursor-agent-pm-sidebar",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "version:patch": "npm version patch -m \"chore: release v%s\"",
    "version:minor": "npm version minor -m \"chore: release v%s\"",
    "version:major": "npm version major -m \"chore: release v%s\"",
    "version:prepatch": "npm version prepatch --preid=beta -m \"chore: pre-release v%s\"",
    "version:preminor": "npm version preminor --preid=beta -m \"chore: pre-release v%s\"",
    "version:premajor": "npm version premajor --preid=rc -m \"chore: pre-release v%s\"",
    "version:prerelease": "npm version prerelease --preid=beta -m \"chore: pre-release v%s\"",
    "release:patch": "npm run version:patch && git push --follow-tags",
    "release:minor": "npm run version:minor && git push --follow-tags",
    "release:major": "npm run version:major && git push --follow-tags"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.21.3",
    "eslint": "^8.57.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.4.5"
  }
}
